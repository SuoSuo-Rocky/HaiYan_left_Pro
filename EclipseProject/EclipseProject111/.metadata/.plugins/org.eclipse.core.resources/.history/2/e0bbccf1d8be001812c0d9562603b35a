    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.listviewdemo.MainActivity" >
    
    
    <ListView 
        android:id="@+id/list"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:entries="@array/city"
        android:dividerHeight="2dp"
        android:divider="#aa0000"
        android:headerDividersEnabled="true"
        android:footerDividersEnabled="true"
        />
    <!--android:entries="@array/city"  表示指定 id 的数组资源 设置显示到 listview 中  -->
    <!--android:dividerHeight="2dp"  表示设置 item 之间的间距
        android:divider="#aa0000"     表示设置 item 之间间距的颜色。 -->
        <!-- android:headerDividersEnabled="true"
        android:footerDividersEnabled="true" -->

